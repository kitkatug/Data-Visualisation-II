{
    "$shema":"https://vega.github.io/schema/vega-lite/v5.json",
    "title":"Most Popular State Travelled To",
    "width":800,
    "layer": [
        {
            "data": {"url": "https://raw.githubusercontent.com/kitkatug/Data-Visualisation-II/main/data/tourism.csv"},
            "mark":{
                "type":"bar",
                "point":true
            },
            "encoding": {
                "x":{"field":"Purpose"},
                "y":
                {
                    "aggregate":"sum",
                    "field":"Trips",
                    "type":"quantitative"
                },
                "color": {"field": "State"},
                "xOffset": {"field": "State"},
                "tooltip": [
                    {"title":"Purpose","field":"Purpose","type":"nominal"},
                    {"title":"State","field": "State", "type":"nominal"},
                    {"title":"Trips","field": "Trips", "type":"quantitative", "format":".0f"}
                ]
            }
        },
        {
            "mark": {"type": "text","align": "right","baseline": "middle"},
            "encoding": {
                "text": {"aggregate":"sum","field": "Trips","type": "quantitative"},
                "color": {"value": "black"}
            }
        }
    ]
}